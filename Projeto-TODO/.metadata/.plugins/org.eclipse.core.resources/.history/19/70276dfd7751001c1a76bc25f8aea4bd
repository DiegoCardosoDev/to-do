package com.diego.todo.services;

import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.Arrays;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.diego.todo.domain.Todo;
import com.diego.todo.repositories.TodoRepository;

@Service
public class DbService {

	@Autowired
	private TodoRepository todoRepository;
	


	public void instaciabaseDeDados() {
		
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm");

		Todo t1 = new Todo(null, "estudar", "estudar spring boot", LocalDateTime.parse("20/11/2021 22:00", formatter),
				true);
		
		Todo t2 = new Todo(null, "estudar", "estudar java", LocalDateTime.parse("20/11/2021 22:35", formatter),
				false);


		todoRepository.saveAll(Arrays.asList(t1,t2));
	}

}
